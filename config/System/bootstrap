# config/bootstrap - options for lingmo-system-build(7), bootstrap stage

# Select architecture to use
LINGMO_SYS_BUILD_ARCHITECTURE="amd64"

# Select distribution to use
LINGMO_SYS_BUILD_DISTRIBUTION="sid"

# Select parent distribution to use
LINGMO_SYS_BUILD_PARENT_DISTRIBUTION=""

# Select distribution to use in the rootfs
LINGMO_SYS_BUILD_DISTRIBUTION_CHROOT="sid"

# Select parent distribution to use in the rootfs
LINGMO_SYS_BUILD_PARENT_DISTRIBUTION_CHROOT="sid"

# Select distribution to use in the final image
LINGMO_SYS_BUILD_DISTRIBUTION_BINARY="sid"

# Select parent distribution to use in the final image
LINGMO_SYS_BUILD_PARENT_DISTRIBUTION_BINARY="sid"

# Select parent distribution for debian-installer to use
LINGMO_SYS_BUILD_PARENT_DEBIAN_INSTALLER_DISTRIBUTION="sid"

# Select archive areas to use
LINGMO_SYS_BUILD_ARCHIVE_AREAS="main contrib non-free non-free-firmware"

# Select parent archive areas to use
LINGMO_SYS_BUILD_PARENT_ARCHIVE_AREAS="main contrib non-free non-free-firmware"

# Set parent mirror to bootstrap from
LINGMO_SYS_BUILD_PARENT_MIRROR_BOOTSTRAP="https://mirrors.tuna.tsinghua.edu.cn/debian"

# Set parent mirror to fetch packages from
LINGMO_SYS_BUILD_PARENT_MIRROR_CHROOT="https://mirrors.tuna.tsinghua.edu.cn/debian"

# Set security parent mirror to fetch packages from
LINGMO_SYS_BUILD_PARENT_MIRROR_CHROOT_SECURITY="https://mirrors.tuna.tsinghua.edu.cn/debian-security"

# Set parent mirror which ends up in the image
LINGMO_SYS_BUILD_PARENT_MIRROR_BINARY="https://mirrors.tuna.tsinghua.edu.cn/debian"

# Set security parent mirror which ends up in the image
LINGMO_SYS_BUILD_PARENT_MIRROR_BINARY_SECURITY="https://mirrors.tuna.tsinghua.edu.cn/debian-security"

# Set debian-installer parent mirror
LINGMO_SYS_BUILD_PARENT_MIRROR_DEBIAN_INSTALLER="https://mirrors.tuna.tsinghua.edu.cn/debian"

# Set mirror to bootstrap from
LINGMO_SYS_BUILD_MIRROR_BOOTSTRAP="https://mirrors.tuna.tsinghua.edu.cn/debian"

# Set mirror to fetch packages from
LINGMO_SYS_BUILD_MIRROR_CHROOT="https://mirrors.tuna.tsinghua.edu.cn/debian"

# Set security mirror to fetch packages from
LINGMO_SYS_BUILD_MIRROR_CHROOT_SECURITY="https://mirrors.tuna.tsinghua.edu.cn/debian-security"

# Set mirror which ends up in the image
LINGMO_SYS_BUILD_MIRROR_BINARY="https://mirrors.tuna.tsinghua.edu.cn/debian"

# Set security mirror which ends up in the image
LINGMO_SYS_BUILD_MIRROR_BINARY_SECURITY="https://mirrors.tuna.tsinghua.edu.cn/debian-security"

# Set debian-installer mirror
LINGMO_SYS_BUILD_MIRROR_DEBIAN_INSTALLER="https://mirrors.tuna.tsinghua.edu.cn/debian"

# Set architectures to use foreign bootstrap
LINGMO_SYS_BUILD_BOOTSTRAP_QEMU_ARCHITECTURE=""

# Set packages to exclude during foreign bootstrap
LINGMO_SYS_BUILD_BOOTSTRAP_QEMU_EXCLUDE=""

# Set static qemu binary for foreign bootstrap
LINGMO_SYS_BUILD_BOOTSTRAP_QEMU_STATIC=""
