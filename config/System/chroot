# config/chroot - options for lingmo-system-build(7), rootfs stage

# Set rootfs filesystem
LINGMO_SYS_BUILD_CHROOT_FILESYSTEM="squashfs"

# Set rootfs squashfs compression level
LINGMO_SYS_BUILD_CHROOT_SQUASHFS_COMPRESSION_LEVEL=""

# Set rootfs squashfs compression type
LINGMO_SYS_BUILD_CHROOT_SQUASHFS_COMPRESSION_TYPE=""

# Set union filesystem
LINGMO_SYS_BUILD_UNION_FILESYSTEM="overlay"

# Set interactive build
LINGMO_SYS_BUILD_INTERACTIVE="false"

# Set keyring packages
LINGMO_SYS_BUILD_KEYRING_PACKAGES="debian-keyring"

# Set kernel flavour to use (with arch)
LINGMO_SYS_BUILD_LINUX_FLAVOURS_WITH_ARCH=""

# Set kernel packages to use
LINGMO_SYS_BUILD_LINUX_PACKAGES=""

# Enable security updates
LINGMO_SYS_BUILD_SECURITY="true"

# Enable updates updates
LINGMO_SYS_BUILD_UPDATES="false"

# Enable backports updates
LINGMO_SYS_BUILD_BACKPORTS="false"
