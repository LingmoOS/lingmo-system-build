# config/bootstrap - options for lingmo-system-build(7), bootstrap stage

# Select architecture to use
LINGMO_SYS_BUILD_ARCHITECTURE="amd64"

# Select distribution to use
LINGMO_SYS_BUILD_DISTRIBUTION="polaris"

# Select parent distribution to use
LINGMO_SYS_BUILD_PARENT_DISTRIBUTION="polaris"

# Select distribution to use in the rootfs
LINGMO_SYS_BUILD_DISTRIBUTION_CHROOT="polaris"

# Select parent distribution to use in the rootfs
LINGMO_SYS_BUILD_PARENT_DISTRIBUTION_CHROOT="polaris"

# Select distribution to use in the final image
LINGMO_SYS_BUILD_DISTRIBUTION_BINARY="polaris"

# Select parent distribution to use in the final image
LINGMO_SYS_BUILD_PARENT_DISTRIBUTION_BINARY="polaris"

# Select parent distribution for debian-installer to use
LINGMO_SYS_BUILD_PARENT_DEBIAN_INSTALLER_DISTRIBUTION="polaris"

# Select archive areas to use
LINGMO_SYS_BUILD_ARCHIVE_AREAS="main"

# Select parent archive areas to use
LINGMO_SYS_BUILD_PARENT_ARCHIVE_AREAS="main"

# Set parent mirror to bootstrap from
LINGMO_SYS_BUILD_PARENT_MIRROR_BOOTSTRAP="https://packages.lingmo.org"

# Set parent mirror to fetch packages from
LINGMO_SYS_BUILD_PARENT_MIRROR_CHROOT="https://packages.lingmo.org"

# Set security parent mirror to fetch packages from
LINGMO_SYS_BUILD_PARENT_MIRROR_CHROOT_SECURITY=""

# Set parent mirror which ends up in the image
LINGMO_SYS_BUILD_PARENT_MIRROR_BINARY="https://packages.lingmo.org"

# Set security parent mirror which ends up in the image
LINGMO_SYS_BUILD_PARENT_MIRROR_BINARY_SECURITY=""

# Set debian-installer parent mirror
LINGMO_SYS_BUILD_PARENT_MIRROR_DEBIAN_INSTALLER="https://packages.lingmo.org"

# Set mirror to bootstrap from
LINGMO_SYS_BUILD_MIRROR_BOOTSTRAP="https://packages.lingmo.org"

# Set mirror to fetch packages from
LINGMO_SYS_BUILD_MIRROR_CHROOT="https://packages.lingmo.org"

# Set security mirror to fetch packages from
LINGMO_SYS_BUILD_MIRROR_CHROOT_SECURITY=""

# Set mirror which ends up in the image
LINGMO_SYS_BUILD_MIRROR_BINARY="https://packages.lingmo.org"

# Set security mirror which ends up in the image
LINGMO_SYS_BUILD_MIRROR_BINARY_SECURITY=""

# Set debian-installer mirror
LINGMO_SYS_BUILD_MIRROR_DEBIAN_INSTALLER="https://packages.lingmo.org"

# Set architectures to use foreign bootstrap
LINGMO_SYS_BUILD_BOOTSTRAP_QEMU_ARCHITECTURE=""

# Set packages to exclude during foreign bootstrap
LINGMO_SYS_BUILD_BOOTSTRAP_QEMU_EXCLUDE=""

# Set static qemu binary for foreign bootstrap
LINGMO_SYS_BUILD_BOOTSTRAP_QEMU_STATIC=""
